# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /               Application.index
GET     /oauthcallback  Application.authenticate
GET		/profile		Profiles.index

#GET	/admin			module:crud

GET 	/login			Application.authenticate
POST	/ws/status		Application.setStatus

# Ajax rating
POST    /article/rate 	Articles.rateArticle(articleId: long, score: int, category: String)

GET     /article		Articles.index
GET     /detail/{id}	Articles.getArticle(id: long)
GET     /pictures		Articles.pictures

# Ignore favicon requests
GET     /favicon.ico   404

# Map static resources from the /app/public folder to the /public path
GET     /public/       staticDir:public

# Catch all
*       /{controller}/{action} {controller}.{action}